<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>定期活動会参加登録</h2>
      <%= form_with(model: @part, url: parts_path, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :nickname, "ニックネーム" %>
          <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネームを入力してください", value: current_user.name, required: true %>
        </div>
        <% if @song_1.present? %>
        <div class="mb-3">
          <%= f.label :song_part_id_1, @song_1.song_title %>
          <%= f.collection_select(:song_part_id_1, SongPart.all(part_type: 'part1'), :id, :name, {}, { class: "form-control"}) %>
        </div>
        <% end %>
        <% if @song_2.present? %>
          <div class="mb-3">
            <%= f.label :song_part_id_2, @song_2.song_title %>
            <%= f.collection_select(:song_part_id_2, SongPart.all(part_type: 'part2'), :id, :name, {}, { class: "form-control"}) %>
          </div>
        <% end %>
        <%= f.submit "作成", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>