  <div class="container" style="margin-top: 100px;">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2>登録内容編集</h2>
        <%= form_with(model: @part, url: part_path(@part), local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :nickname, "ニックネーム" %>
            <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネームを入力してください", value: @part.nickname, required: true %>
          </div>
          <% if @song_1.present? %>
          <div class="mb-3">
            <%= f.label :song_part_id_1, @song_1.song_title %>
            <%= f.collection_select(:song_part_id_1, SongPart.all(part_type: 'part1'), :id, :name, {}, { class: "form-control"}) %>
          </div>
          <% end %>
          <% if @song_2.present? %>
          <div class="mb-3">
            <%= f.label :song_part_id_2, @song_2.song_title %>
            <%= f.collection_select(:song_part_id_2, SongPart.all(part_type: 'part2'), :id, :name, {}, { class: "form-control"}) %>
          </div>
          <% end %>
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to "削除", part_path(@part.id), data: {turbo_method: :delete}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>